generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String     @id
  email          String     @unique
  passivEmail    String
  passivPassword String
  passivToken    String
  headrooms      Headroom[]
}

model Headroom {
  id       String    @id
  year     Int
  accounts Account[]
  userId   String
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id         String      @id
  accountId  String
  type       AccountType
  amount     Float
  headroomId String
  headroom   Headroom    @relation(fields: [headroomId], references: [id], onDelete: Cascade)
}

enum AccountType {
  RRSP
  TFSA
  RESP
  MARGIN
}
